<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentGst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="current Gst" />

    <EditText
        android:id="@+id/editGst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentGst"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter new GST %"
        android:inputType="number" />
    <CheckBox
        android:id="@+id/agree_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to add new GST%"
        android:layout_below="@id/editGst"
        android:layout_centerHorizontal="true" />

</RelativeLayout>