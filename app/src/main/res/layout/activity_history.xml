<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HistoryActivity">
    <RelativeLayout
        android:id="@+id/RelativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/lineardate"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextDatePickrFrom"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_border"
               android:gravity="center"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/from_date"
                android:inputType="none"
                android:onClick="showDatePickerDialogFrom"
                android:singleLine="true" />


            <EditText
                android:id="@+id/editTextDatePickerTO"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/editTextDatePickrFrom"
                android:gravity="center"
                android:background="@drawable/edit_text_border"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/to_date"
                android:inputType="none"
                android:onClick="showDatePickerDialogTo"
                android:singleLine="true" />


        </RelativeLayout>

        <AutoCompleteTextView
            android:id="@+id/Hsearchbox"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_below="@+id/lineardate"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edit_text_bg"
            android:drawableRight="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:hint="Search"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hisrecyle"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout5"

        android:layout_marginTop="-50dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/backbutton_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/riple_effect_linear"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_effect_backarrow"
                    android:contentDescription="Back Arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!-- Add other contents here -->
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>